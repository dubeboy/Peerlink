<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:cardCornerRadius="10dp"
    app:contentPaddingBottom="10dp"
    app:contentPaddingLeft="10dp"
    app:contentPaddingRight="10dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="match_parent"
            android:id="@+id/tv_alert_dialog_title"
            android:text="@string/attached_files"
            android:textAlignment="center"
            android:padding="10dp"
            android:layout_height="match_parent" />

        <LinearLayout
            android:layout_width="match_parent"

            android:orientation="horizontal"
            android:gravity="center"

            android:layout_height="match_parent">

            <android.support.design.widget.FloatingActionButton
                android:layout_margin="5dp"
                android:layout_width="wrap_content"
                android:padding="20dp"
                android:id="@+id/btn_attach_photos"
                app:backgroundTint="#00695C"
                android:tint="@color/white"
                android:layout_weight="1"
                android:src="@drawable/ic_image_black_24dp"
                android:layout_height="wrap_content" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btn_attach_video"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:padding="20dp"
                android:src="@drawable/ic_ondemand_video_24dp"
                android:tint="@color/white"
                app:backgroundTint="#c70008"
                app:rippleColor="#eee" />

            <android.support.design.widget.FloatingActionButton
                android:layout_width="wrap_content"
                android:layout_margin="5dp"
                android:padding="20dp"
                android:id="@+id/btn_attach_filez"
                app:backgroundTint="#304FFE"
                android:tint="@color/white"
                android:layout_weight="1"
                android:src="@drawable/ic_attach_file_24dp"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>
</android.support.v7.widget.CardView>

